<p id="notice"><%= notice %></p>

<h1>People:
  <%= @person.count %> / <%= Person.count %>
</h1>
<br>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Birth Year</th>
    <th>Gender</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @person.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.birth_year %></td>
      <td><%= person.gender %></td>
      <td><%= link_to 'Show', person %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

